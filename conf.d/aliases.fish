# ===== Modern CLI Tool Replacements =====

# Define aliases for modern replacements
alias find="fd"
alias grep="rg"
alias du="dust"
alias ps="procs"
alias top="btm"
alias sed="sd"
alias cat="bat"

# ===== System Maintenance =====
alias ports="lsof -i -P -n | grep LISTEN"
alias diskspace="dust -d 1"
alias memory="btm"
alias diff="difft"
alias tree="exa --tree --level=2"
